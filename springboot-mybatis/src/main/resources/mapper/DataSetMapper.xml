<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.spring.springboot.mapper.DatasetMapper">
    <resultMap id="BaseResultMap" type="org.spring.springboot.domain.Dataset">
        <id column="dataset_id" jdbcType="INTEGER" property="datasetId"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="storage" jdbcType="INTEGER" property="storage"/>
        <result column="tenant_id" jdbcType="VARCHAR" property="tenantId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        dataset_id, name, description, storage,create_time,tenant_id
    </sql>
    <sql id="Dataset_Column_List">
        (name,description,user_id)
    </sql>

    <select id="getDatasetsByUser" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from t_dataset
        where user_id = #{userId}
    </select>
    <!--通过useGeneratedKeys、keyColumn、keyProperty实现了主键回显-->
    <insert id="createDataset" parameterType="org.spring.springboot.vo.DatasetVo" useGeneratedKeys="true"
            keyColumn="dataset_id" keyProperty="datasetId">
        insert into t_dataset (name,description,user_id) values (#{name},#{description},#{userId})
    </insert>

</mapper>
